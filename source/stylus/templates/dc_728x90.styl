/* *************
728x90px DOUBLECLICK BANNER TEMPLATE
**************** */
banner_bg = #2c3e50
banner_width = 728px
banner_height = 90px

/* Div layer for the entire banner. */
#container_dc
  position absolute
  width banner_width
  height banner_height
  top 0px
  left 0px
  margin auto
  overflow hidden
  background-color banner_bg

#content_dc
  position absolute
  width 100%
  height 100%
  top 0px
  left 0px
  z-index 100

/* Invisible button for background clickthrough. */
#background_exit_dc
  position absolute
  width 100%
  height 100%
  top 0px
  left 0px
  cursor pointer
  opacity 0
  z-index 400

.banner-wrapper
  width banner_width
  height banner_height
  overflow hidden
  position relative

.content-wrapper
  position relative
  width banner_width
  height banner_height
  overflow hidden
  background-color banner_bg
